---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Typescript from "./icons/Typescript.astro";
import Prisma from "./icons/Prisma.astro";
const personalImageAlt = "Facundo Flores";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const icons = [
  {
    name: "Next.js",
    icon: NextJS,
  },
  {
    name: "Typescript",
    icon: Typescript,
  },
  {
    name: "Tailwind",
    icon: Tailwind,
  },
  {
    name: "Prisma",
    icon: Prisma,
  },
];
---

<section class="flex min-h-[calc(100vh-72px)] items-center justify-center">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 md:px-12 lg:px-24 lg:py-24">
    <div class="mx-auto flex max-w-7xl flex-wrap items-center">
      <div class="w-full rounded-xl lg:w-1/2 lg:max-w-lg">
        <div>
          <div class="relative w-full max-w-lg">
            <div
              class="animate-blob absolute top-0 -left-4 h-72 w-72 rounded-full bg-violet-300 opacity-70 mix-blend-multiply blur-xl filter"
            >
            </div>

            <div
              class="animate-blob animation-delay-4000 absolute -bottom-24 right-20 h-72 w-72 rounded-full bg-fuchsia-300 opacity-70 mix-blend-multiply blur-xl filter"
            >
            </div>
            <div class="relative">
              <img
                width="512"
                height="512"
                alt={personalImageAlt}
                class="mx-auto rounded-lg object-cover object-center shadow-2xl"
                src="/hero.webp"
              />
            </div>
          </div>
        </div>
      </div>
      <div
        class="mt-12 mb-16 flex flex-col items-start text-left md:mb-0 lg:w-1/2 lg:flex-grow lg:pl-6 xl:mt-0 xl:pl-24"
      >
        <span
          class="mb-8 text-xs font-bold uppercase tracking-widest text-yellow-500 dark:text-yellow-200"
        >
          {" "}
          Full-Stack Developer{" "}
        </span>
        <h1
          class="mb-8 text-4xl font-bold leading-none tracking-tighter text-darkText-300 md:text-7xl lg:text-5xl"
        >
          {t("hero.title")}
        </h1>
        <p class="mb-8 text-left text-base leading-relaxed text-darkText-300">
          {t("hero.description")}
        </p>
        <div class="mt-2 flex w-full flex-wrap text-left lg:-mx-4">
          {
            icons.map((icon) => (
              <div class="group relative mt-4 flex w-1/4 p-4 sm:w-1/4">
                <icon.icon
                  class={`h-10 w-10 ${icon.name === "Prisma" && "dark:fill-white"} text-darkText-400`}
                />

                <span
                  class="absolute left-9 m-4 mx-auto mt-10 -translate-x-1/2 translate-y-full rounded-md bg-gray-800 
px-1 text-sm text-gray-100 opacity-0 transition-opacity group-hover:opacity-100"
                >
                  {icon.name}
                </span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
